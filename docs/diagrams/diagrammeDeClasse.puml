@startuml diagrammeDeClasse

class User {
    -id: int
    -login: string
    -password: string
    -roles: array
    -banned: boolean
    -createdAt: datetime
    -updatedAt: datetime
}

abstract class Ressource{
    -id: int
    -titre: string
    -contenu: string
    -datetimeCreation: datetime
    -validationAdmin: boolean
    -datetimeValidationAdmin: datetime
    -estRestreint: boolean
    -suspendu: boolean
    -deleted: boolean
}

class Video{
    -url: string
}

class Photo{
    -url: string
}

class Activite{
    -reponse: string
}

class Categorie{
    -id: int
    -nom: string
    -icone: string
    -datetimeCreation: datetime
    -deleted: boolean
}

class Commentaire{
    -id: int
    -message: string
    -datetimeCreation: datetime
    -deleted: boolean
}

